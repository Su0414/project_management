<h1>Projects Dashboard</h1>

<h1>List Of Projects</h1>
 <table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
   <tbody>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Description</strong></td>
      <td><strong>Details</strong></td>
    </tr>
    <% @projects.each do |project| %>
      <tr>
          <% if project.status == "active" %>
              <td><%= project.name %></td>
              <td><%= project.description %></td>
          <% else %>
              <td>
              <strike><%= project.name %></strike>
              </td>
              <td>
              <strike><%= project.description %></strike>
              </td>
          <% end %>

              <% if current_user.admin %>
                <td>
                
                  <%= link_to "Show", project_path(project) %>
                  <%= link_to "Edit", [:edit, project] %>
                  <%= link_to "Delete" %>
                </td>
              <% else %>
                <td><%= link_to "Show Tasks", project_path(project) %></td>
              <% end %>
          
      </tr>
    <% end %>
  </tbody>
</table>
<br>
 <% if current_user.admin %>  
  <p><%= link_to 'New Project', new_project_path %></p>  
<% end %>
