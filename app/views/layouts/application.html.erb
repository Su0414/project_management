<!DOCTYPE html>
<html>
  <head>
    <title>ProjectManagement</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>

  <body>
  <a href="<%= root_url %>"/>Home</a>
    
              <% if current_user %>
                <li><%= link_to "Hello, #{current_user.first_name}!", user_path(current_user) %></li>
                <li><%= link_to "Projects Dashboard", projects_path %></li>
                <li><%= link_to "Log Out", signout_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "Sign Up", new_user_path %></li>
                <li><%= link_to "Sign In", signin_path %></li>
                OR 
                <li><h2><%= link_to "Sign in with Twitter" ,  "/auth/twitter"  %>    
                </h2></li>
                <li><h2><%= link_to "Sign in with Github" ,  "/auth/github"  %>    
                </h2></li>
              <% end %>


     
      <div class="container">
        <%= yield %>
      </div>
  </body>
</html>
