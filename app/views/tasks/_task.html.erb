<ul>
<% @project.tasks.each do |t| %> 
    
        <% if t.completed?  %>            
            <div class="task">
                    <strike><li><%= t.content%></li></strike>
            </div>          
        <% else %>        
            <div class="task">
            <li><%= t.content%></li>
            </div>
        <% end %>

        Task Assigned To:
            <%= t.user.first_name %>  

        <% if @project.status == "active" && current_user == t.user %>
            <div class="complete">
            <% if !t.completed?  %>    
               <p><%= link_to "Mark as Completed", complete_project_task_path(@project, t.id) , method:"patch" %></p>
            <% end %>                
            </div>

            <div class="trash">
                <p><%= link_to "Delete Task", project_task_path(@project, t.id) , method:"delete",  data: { confirm: "You want to delete this task?" } %></p>
            </div>
        <% end %>               

    <% end %>
    </ul>


    