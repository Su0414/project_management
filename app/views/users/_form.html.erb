<% if flash[:notice] %>
      <div class="notice">
          <%= flash[:notice] %>
      </div>
  <% end %>  
  
<%= form_for @user do |f| %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    
    <%= f.label :admin, "Check box if you are company owner" %>
    <%= f.check_box :admin %>
    <br>
     
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    
    <%= f.submit 'Create User' %>
    <% end %>